{#
/**
 * @file
 * Display of hearing warning
 *
 * Available variables:
 * - config: The available texts
 */
#}


{% if (config.deadline_passed) %}
  <div class="bg-danger p-3">
    <div class="container">
      {{ 'Note! Hearing deadline has passed.'|t  }}
    </div>
  </div>
{% else %}
  <div class="bg-warning p-3">
    <div class="container">
      {{ 'Note! Hearing deadline approaching.'|t  }}
    </div>
  </div>
{% endif %}