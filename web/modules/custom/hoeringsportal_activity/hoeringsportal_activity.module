use Drupal\hoeringsportal_activity\Helper\ActivityHelper;

/**
 * Implements hook_theme().
 */
function hoeringsportal_activity_theme($existing, $type, $theme, $path) : array {
  return [
    'hoeringsportal_activity_add_activity' => [
      'variables' => [
        'entities' => NULL,
        'module_path' => $path,
      ],
    ],
  ];
}

/**
 * Implements hook_entity_presave().
 */
function hoeringsportal_activity_entity_presave(EntityInterface $entity) {
  Drupal::service(ActivityHelper::class)->coursePresave($entity);
}

/**
 * Implements hook_form_FORMID_alter().
 */
function hoeringsportal_activity_form_node_course_form_alter(&$form, FormStateInterface $form_state) {
