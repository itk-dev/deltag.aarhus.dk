{#
/**
 * @file
 * Theme override of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
<div class="row">
  <div class="col-8">{{ form }}</div>
  <div class="col-4">
    <div class="float-md-right mt-3 hotness-legend">
      <label>{{ 'Popularity'|t }}</label>
      <div>
        <span class="text-muted">{{ 'Cold'|t }}</span>
        <span class="badge hotness-1"></span>
        <span class="badge hotness-2"></span>
        <span class="badge hotness-3"></span>
        <span class="badge hotness-4"></span>
        <span class="badge hotness-5"></span>
        <span class="text-muted">{{ 'hot'|t }}</span>
      </div>
    </div>
  </div>
</div>
