{# Template for Citizen proposal teaser extending base-card #}

{% if (content.field_vote_end) %}
  {% set voteEnd = citizen_proposal_helper.getVoteEndDate(node) %}
{% endif %}

{% extends 'themes/custom/hoeringsportal/templates/components/base-card.html.twig' %}

{% block card_content %}
  <div class="d-flex my-3 justify-content-between">
    <div><span>{{ 'End date'|t }}:</span><strong class="ms-1">{{ voteEnd|format_date('hoeringsportal_date_long')|capitalize }}</strong></div>
  </div>
  <div class="activity-supporters">
    {{ include('citizen-proposal-support-counter.html.twig', {data: {
      supportCount: proposal_support_count,
      supportRequired: proposal_support_required,
      supportPercentage: proposal_support_percentage,
      }}) }}
  </div>
{% endblock %}
{% block card_footer %}
  {{ content.field_author_name }}
{% endblock %}
