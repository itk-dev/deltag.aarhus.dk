{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white">
  <div class="container">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#block-primaernavigation" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    {% if elements.hoeringsportal_branding %}
      {{ elements.hoeringsportal_branding }}
    {% endif %}

    <div class="collapse navbar-collapse" id="block-navigation">
      {% if elements.primaernavigation %}
        {{ elements.primaernavigation }}
      {% endif %}
      {% if elements.sekundaernavigation %}
        {{ elements.sekundaernavigation }}
      {% endif %}
    </div>
  </div>
</nav>
