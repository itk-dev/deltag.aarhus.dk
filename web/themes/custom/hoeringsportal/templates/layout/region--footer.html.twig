/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

<div class="footer mt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        {% if (custom_config_exists) %}
          {{ footer_text|raw }}
        {% endif %}
        <p><img src="/{{ base_path ~ directory }}/static/images/AAK_02_venstrejusteret_hvid.svg" alt="Aarhus Kommune"></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 permalinks">
        {% if content %}
          {{ content }}
        {% endif %}
      </div>
    </div>
  </div>
</div>