{{ attach_library('hoeringsportal/image-fade') }}
<div class="header-v2 mb-5">
  {% if images %}
    {% if images|length > 1 %}
      <div class="image-wrapper image-fade" data-image-duration="15000">
        {% for key, image in images %}
          <img id="img-{{ key }}" class="image-slide" src="{{ image|file_url }}" alt="">
        {% endfor %}
      </div>
    {% else %}
      <div class="image-wrapper">
        <img src="{{ images[0]|file_url }}" alt="">
      </div>
    {% endif %}
  {% endif %}
  <div class="content-wrapper type-project position-relative {{ images ? 'with-image' : '' }}">
    <div class="container">
      {% if category %}
        {{ category }}
      {% endif %}
      <h1>{{ title }}</h1>
      {{ description }}
      {% if area %}
        <div class="areas">{{ area }}</div>
      {% endif %}
    </div>
  </div>
</div>

