<section class="timeline-section">
  <div class="timeline-header">
    <h2>Projektets tidslinje</h2>
    <button id="view-toggle">↔ Horisontal</button>
  </div>

  <div class="timeline-vertical">
    <div class="timeline-line"></div>

    {% for item in data.timelineData %}
      <div class="timeline-item {{ loop.index0 is even ? 'left' : 'right' }}" id="item-{{ item.id }}">
        <div class="timeline-card">
          {% if item.image %}
            <img src="{{ data.images[item.image] }}" alt="{{ item.title }}" style="width: 100%">
          {% endif %}

          <div class="card-content" style="padding: 20px;">
                            <span class="status-tag" style="background: {{ item.status == 'completed' ? '#e5eef0' : '#f6f6f6' }}">
                                {{ item.month }} {{ item.date }}
                            </span>
            <h3>{{ item.title }}</h3>
            <p>{{ item.description }}</p>

            {% if item.link %}
              <a href="{{ item.link }}" class="btn-link">{{ item.linkText }} →</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
