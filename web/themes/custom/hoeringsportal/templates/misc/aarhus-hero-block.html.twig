{#
/**
 * @file
 * Display of footer
 *
 * Available variables:
 * - config: The available texts
 * - image: A rendered image
 */
#}

<div class="campaign">
  <div class="campaign-media">
    {{ image }}
  </div>
  <div class="campaign-content">
    <a href="{{ config.hero_url }}">
      <h2 class="underlined">{{ config.hero_title }}</h2>
      <p>{{ config.hero_text }}</p>
      <button class="btn btn-large btn-primary">{{ config.hero_button_text }}</button>
    </a>
  </div>
</div>
